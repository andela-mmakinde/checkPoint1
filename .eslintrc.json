{
    "title": "JSON schema for ESLint configuration files",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "extends": "airbnb",
    "plugins": [
        "react",
        "jsx-a11y",
        "import"
    ],
    "rules": {
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
    },
    "env": {
        "browser": true,
        "node": true,
        "es6" : true,
        "mocha": true
    },
    "parser": "babel-eslint"
}